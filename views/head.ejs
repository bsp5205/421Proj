<html>
<head>
    <title><%= title %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous"></head>
<body>

<style>
    body{
        background-image: url("https://images.hdqwalls.com/wallpapers/vaporwave-zl.jpg");
    }
    .animals {
        position: relative;
        display: none;
        width: 100%;
        background-color: white;
        text-align: left;
    }
    .animals:hover{
        background-image: linear-gradient(rgba(0, 0, 0, 0.4) 0 0);
    }
    .containerTest{
        display: none;
        width: 45%;
        background: white;
        position: absolute;
        justify-content: center;
        border: 1px solid rgba(118,118,118,255);
        border-top: none;
        left: 25%;
        margin-top: -1.8%;
    }
    .centerTest {
        display: flex;
        justify-content: center;
        width: 100%;
        position: absolute;
        align-items: center;
        top: 2.5%;
        z-index: 1 !important;
    }
    .bar{
        background-color: lightgrey;
        z-index: 0;
    }
    .imgButton{
        display: flex;
        margin-left: 2%;
        z-index: 2 !important;
        position: relative;
    }
    .img{
        width: 150px;
        background-color: lightgrey;
    }
    #searchBar{
        width: 45%;
        margin-bottom: 2%;
        outline:none;
    }
    #searchButton{
        width: 5%;
        background-color: rgb(54, 54, 54);
        padding: 5px 20px;
        text-align: center;
        color: white;
        font-size: 14px;
        margin-bottom: 2%;
        z-index: 2 !important;
        position: relative;
    }
    .right{
        float: right;
    }
    .button {
        background-color: rgb(54, 54, 54);
        border: none;
        color: white;
        padding: 5px 20px;
        text-align: center;
        text-decoration: none;
        display: inline;
        font-size: 16px;
        margin: 4px 2px;
        cursor: pointer;
        -webkit-transition-duration: 0.4s; /* Safari */
        transition-duration: 0.4s;
        z-index: 2 !important;
        position: relative;
    }
    .button2:hover {
        box-shadow: 0 12px 16px 0 rgba(0,255,255,0.5),0 17px 50px 0 rgba(0,255,255,0.19);
    }

</style>

<script>
    function search_animal() {
        let input = document.getElementById('searchBar').value
        let cont = document.getElementsByClassName('containerTest');
        cont[0].style.display="block";
        input = input.toLowerCase();
        let x = document.getElementsByClassName('animals');

        for (i = 0; i < x.length; i++) {
            if (!x[i].innerHTML.toLowerCase().includes(input)) {
                x[i].style.display="none";
            }
            else {
                x[i].style.display="block";
            }
        }

        if(document.getElementById("searchBar").value.length == 0) {
            cont[0].style.display="none";
            for (i = 0;i < x.length; i++){
                x[i].style.display = "none";
            }
        }
    }


    function testAlert(){
        alert("you clicked a button");
    }
</script>
<div class="centerTest">
    <input type="search" id="searchBar" oninput="search_animal()" placeholder="Search...">
    <button class='button2' id="searchButton">Search</button>
</div>
<div class="bar">
    <div class="right">
        <a href="/login"><button class='button button2'>Login</button></a>
        <a href="/signup"><button class='button button2'>Sign up</button></a>
    </div>
    <button class='imgButton' onclick="window.location.href = 'http://localhost:3000/'"><image class='img' src="./images/Logo.png"></image></button>

    <div class="containerTest">
        <div>
            <button class="animals">Cat</button>
        </div>
        <div class="spacing">
            <button class="animals">Dog</button>
        </div>
        <div class="spacing">
            <button class="animals">Elephant</button>
        </div>
        <div class="spacing">
            <button class="animals">Fish</button>
        </div>
        <div class="spacing">
            <button class="animals">Gorilla</button>
        </div>
        <div class="spacing">
            <button class="animals">Monkey</button>
        </div>
        <div class="spacing">
            <button class="animals">Turtle</button>
        </div>
        <div class="spacing">
            <button class="animals">Whale</button>
        </div>
        <div class="spacing">
            <button class="animals">Aligator</button>
        </div>
        <div class="spacing">
            <button class="animals">Donkey</button>
        </div>
        <div class="spacing">
            <button class="animals">Horse</button>
        </div>
    </div>
</div>



